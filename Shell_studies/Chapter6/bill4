BEGIN {
	printf "Bill for the 4-March-2001.\n"
	printf "By Vivek G Gite. \n"
	printf "----------------------------\n"
}

{
	total = $3 * $4
	recno = $1
	item = $2
	gtotal += total
	printf "%2d %-10s Rs.%7.2f\n", recno, item, total
}

END {
	printf "------------------------------\n"
	printf "\tTotal Rs. %6.2f\n", gtotal
	printf "===============================\n"
}
